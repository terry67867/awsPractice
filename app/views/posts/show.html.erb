<!-- 가운데정렬 -->
<div class="d-flex justify-content-center mt-3">
  <figure class="figure">
    <img src="<%= @post.postimage%>" class="figure-img img-fluid rounded" style="height:70vh;">
    <figcaption class="figure-caption">
  </figure>
</div>

<% if can? :update, @post %>
<p><a href="/posts/<%=@post.id%>/edit">수정</a></p>
<% end %>
<% if can? :destroy, @post %>
<p><a href="/posts/<%=@post.id%>" data-method="delete" date-confirm="삭제할래?">삭제</a></p>
<% end %>


<a href="/posts">홈으로</a>
<p><%=@post.title%></p>
<p><%=@post.content%></p>
